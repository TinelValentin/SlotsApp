<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SevenSlots.View.SignUpView"
             BackgroundColor="#523943">
             
    <StackLayout>
        <Label Text="Register Now!"
               HorizontalTextAlignment="Center"
               Margin="0, 5, 0, 0"
               FontSize="30"/>
        <Label Text="Name"
               Style="{StaticResource LabelTextStyle}"/>
        <Entry/>
        <Label Text="Surname"
               Style="{StaticResource LabelTextStyle}"/>
        <Entry/>
        <Label Text="Username"/>
        <Entry/>
        <Label Text="Password"/>
        <Entry IsPassword="True"/>
        <Label Text="Email"/>
        <Entry/>
        <Label Text="Phone"/>
        <Entry/>
        <Label Text="SSN"/>
        <Entry/>
        <Button Text="Sign Up"
                Style="{StaticResource ButtonSmootherStyle}"/>
    </StackLayout>
    
</ContentPage>