<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="SevenSlots.View.AppShell"
       xmlns:views="clr-namespace:SevenSlots.View">
    <Shell.FlyoutHeader>
        <views:HeaderContentView/>
    </Shell.FlyoutHeader>
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="#470204"/>
            </Style>
            <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}"/>
            <Style TargetType="FlyoutItem" BasedOn="{StaticResource BaseStyle}"/>
        </ResourceDictionary>
    </Shell.Resources>
    <FlyoutItem Title="MyTabApp" Shell.TabBarIsVisible="False" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" IsTabStop="True" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="Blackjack" IsTabStop="True" ContentTemplate="{DataTemplate views:BlackjackView}"/>
        <ShellContent Title="Sign In" IsTabStop="True" ContentTemplate="{DataTemplate views:SignInView}"/>
        <ShellContent Title="Sign Up" IsTabStop="True" ContentTemplate="{DataTemplate views:SignUpView}"/>
    </FlyoutItem>
</Shell>